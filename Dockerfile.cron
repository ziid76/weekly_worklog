FROM python:3.9

# cron 설치
RUN apt-get update && apt-get install -y cron && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN pip install -r requirements.txt

COPY . .

# crontab 파일 복사
COPY crontab /etc/cron.d/gemini-cron
RUN chmod 0644 /etc/cron.d/gemini-cron
RUN crontab /etc/cron.d/gemini-cron

# 로그 디렉토리 생성
RUN mkdir -p /var/log/cron

# 시작 스크립트 생성
COPY start.sh /start.sh
RUN chmod +x /start.sh

CMD ["/start.sh"]
